        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "@types/node": "^22.7.7",
        "@types/node-cron": "^3.0.11",
        "prisma": "^5.21.1",
        "prompt-sync": "^4.2.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.6.3"
    },
    "prisma": {
        "schema": "src/prisma/schema.prisma"
    }
